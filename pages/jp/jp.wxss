/* pages/jp/jp.wxss */
.menu {display: block;height: 38px; background: #fff; position: fixed; top: 0; z-index: 999; width: 100%;}
/*一级菜单*/
.menu dt { font-size: 12px;float:left; width:24.5%;height: 38px;border-right: 1px solid #eee;
   border-bottom: 1px solid #eee; text-align: center;background-color: #fff; color: #333;line-height: 40px;}
.menu dt:nth-child(4){ border-right: none;}
/*二级菜单外部容器样式*/
.menu dd{ position: absolute;width: 100%;top:39px; left:0;z-index:999; box-shadow:0px 10px 10px rgba(0,0,0,.2);}
/*二级菜单普通样式*/
.menu li{
   font-size: 14px; line-height: 34px;color: #575757;height: 34px;display: block;padding-left: 8px;
   background-color: #fff;border-bottom: 1px solid #eee;
}
.show { display: block;}
.hidden {display: none;}
.menu li.highlight{ background-color: #f4f4f4;}
.class_50{ clear: both; margin-top: 50px; height: 1px;}

