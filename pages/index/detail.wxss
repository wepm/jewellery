/* pages/index/detail.wxss */
.ad{
    width: 100%;
    background: rgba(0,0,0,.6);
    padding: 3% 0;
    display: inline-table;
    position: fixed;
    z-index: 9999;
}
.ad .text-title{
    font-size: 14px;
    color: #fff;
    width: 60%;
    text-align: center;
    float: left;
    line-height: 15px;

}
.ad .button_icon{
    border-radius: 20px;
    background: #fd9d21;
    width: 20%;
    text-align: center;
    font-size: 14px;
    color: #fff;
    padding: 5px 10px;
    float: left;

}
.ad .cl_button{
    width: 16px;
    height: 16px;
    float: right;
    margin: 8px 10px;
}
.cont{
  width: 100%;
  background: #fff;
  margin-bottom: 10px;
}
.cont .tp_image{
  width: 100%;
  height: 200px;
}
.cont .title{
  font-size: 16px;
  color: #333;
  line-height:20px;
  margin:0;
  max-height:40px;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  padding: 5% 5% 0 5%;
}
.gmxx{
  padding:1% 5% 5% 5%;
  line-height: 25px;
}
.gmxx .jiage{
  font-size: 18px;
  color: #dd2727;
  padding-top: 10px;
}
.icon_kf{
  width: 20px;
  height: 20px;
  display: inline-block;
  margin-top: 5px;
}
.l_h15{
  line-height: 15px;
}
.dbtext{
  line-height: 15px;
  color: #666;
  font-size: 12px;
}

.nav{
  width:100%;
  display:flex;
  flex-direction:row;
  line-height: 40px;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  font-size: 14px;
  }
.default{
  line-height:40px;
  text-align:center;
  flex:1;
  border-right:1px solid #eee;
  color:#333;
  font-weight:bold;
  font-size:14px;
  }
 .default:nth-child(2){
   border-right: none;
 } 
.red{
  line-height:40px;
  text-align:center;
  color:#fc0628;
  flex:1;
  font-weight:bold;
  font-size:14px;
  border-bottom: 2px solid #fc0628;
}
.show{display:block;line-height:25px; color: #666; font-size: 12px;}
.hidden{display:none;line-height:25px;}
.canshu{
  border-bottom: 1px solid #eee;
  font-size: 12px;
  line-height: 23px;
  width: 100%;
  padding: 2% 0;
}
.canshu .name{
   width: 80px;
   color: #999;

}
.canshu span{
   color: #333;
}
